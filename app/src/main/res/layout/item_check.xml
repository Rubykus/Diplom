<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <TextView
        android:id="@+id/textIDSale"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="83dp"
        android:text="text1"
        android:textSize="16dip"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="83dp" />
    <TextView
        android:id="@+id/textIDGood"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="text2"
        android:textSize="16dip"
        android:textStyle="bold"
        android:layout_below="@+id/textView1"
        android:layout_alignLeft="@+id/textIDSale"
        android:layout_alignStart="@+id/textIDSale" />
    <TextView
        android:id="@+id/textDate"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="text3"
        android:textSize="16dip"
        android:textStyle="bold"
        android:layout_below="@+id/textIDGood"
        android:layout_alignLeft="@+id/textIDGood"
        android:layout_alignStart="@+id/textIDGood" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Check:"
        android:id="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textIDGood"
        android:layout_toStartOf="@+id/textIDGood" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textIDGood"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignStart="@+id/textView1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cost:"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/textDate"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignStart="@+id/textView1" />
</RelativeLayout>
